@model IEnumerable<RAShop.Shared.DTO.ProductDTO>
@{
    var pageCurrent = (int)ViewData["page"];
    int totalPages = (int)ViewData["totalPage"];
    string searchString = (string)ViewData["searchString"];
    string sort = (string)ViewData["sort"];
}
<div class="container mt-5">
    <div class="row">
        <div class="btn-group float-end" style="width: 15%!important; margin-bottom: 20px;">
            @switch (sort)
            {
                case "price":
                    <button type="button" class="btn btn-outline-success dropdown-toggle" data-bs-toggle="dropdown"
                aria-expanded="false">
                        Sắp xếp: Giá tăng dần
                    </button>
                    break;
                case "price_desc":
                    <button type="button" class="btn btn-outline-success dropdown-toggle" data-bs-toggle="dropdown"
                aria-expanded="false">
                        Sắp xếp: Giá giảm dần
                    </button>
                    break;
                case "name":
                    <button type="button" class="btn btn-outline-success dropdown-toggle" data-bs-toggle="dropdown"
                aria-expanded="false">
                        Sắp xếp: Tên a-z
                    </button>
                    break;
                case "name_desc":
                    <button type="button" class="btn btn-outline-success dropdown-toggle" data-bs-toggle="dropdown"
                aria-expanded="false">
                        Sắp xếp: Tên z-a
                    </button>
                    break;
                default:
                    <button type="button" class="btn btn-outline-success dropdown-toggle" data-bs-toggle="dropdown"
                aria-expanded="false">
                        Sắp xếp
                    </button>
                    break;
            }
            <ul class="dropdown-menu">
                <li>
                    <a a class="dropdown-item" asp-controller="Product" asp-action="SearchProducts"  asp-route-searchString="@searchString"
                        asp-route-sortorder="price" asp-route-pageCurrent="@pageCurrent">Giá tăng dần
                    </a>
                </li>
                <li>
                    <a a class="dropdown-item" asp-controller="Product" asp-action="SearchProducts"  asp-route-searchString="@searchString"
                        asp-route-sortorder="price_desc" asp-route-pageCurrent="@pageCurrent">Giá giảm dần
                    </a>
                </li>
                 <li>
                    <a a class="dropdown-item" asp-controller="Product" asp-action="SearchProducts"  asp-route-searchString="@searchString"
                        asp-route-sortorder="name" asp-route-pageCurrent="@pageCurrent">Tên a-z
                    </a>
                </li>
                 <li>
                    <a a class="dropdown-item" asp-controller="Product" asp-action="SearchProducts"  asp-route-searchString="@searchString"
                        asp-route-sortorder="name_desc" asp-route-pageCurrent="@pageCurrent">Tên z-a
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="d-flex flex-wrap">
        @foreach (var item in ViewBag.Products)
        {
            var pathImage = "../frontend/assets/img/product/" + @item.MainImg;
            <div class="card-fix">
                <a asp-controller="Product" asp-action="GetProductDetail" asp-route-id="@item.ProductId">
                    <img src="@pathImage" class="card-img-top" alt="@item.ProductName">
                </a>
                <div class="card-body">
                    <h5 class="card-title ms-3">@item.ProductName</h5>
                    <hr>
                    <p class="card-text text-center fs-5" style="color:#e68b24 ;">@string.Format("{0:#,##0.##}₫",
                    @item.Price)</p>
                </div>
            </div>
        }
    </div>
</div>

@if (totalPages == 1)
{

}
else if (pageCurrent == 1)
{
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            <li class="page-item "><a class="page-link" asp-controller="Product" asp-action="SearchProducts"
                asp-route-searchString="@searchString" asp-route-sortorder="@sort"
                asp-route-pageCurrent="@(pageCurrent + 1)">Sau</a></li>
        </ul>
    </nav>
}
else if (pageCurrent == totalPages)
{
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            <li class="page-item "><a class="page-link" asp-controller="Product" asp-action="SearchProducts"
                asp-route-searchString="@searchString" asp-route-sortorder="@sort"
                asp-route-pageCurrent="@(pageCurrent - 1)">Trước</a></li>
        </ul>
    </nav>
}
else
{
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            <li class="page-item "><a class="page-link" asp-controller="Product" asp-action="SearchProducts"
                asp-route-searchString="@searchString" asp-route-sortorder="@sort"
                asp-route-pageCurrent="@(pageCurrent - 1)">Trước</a></li>
            <li class="page-item "><a class="page-link" asp-controller="Product" asp-action="SearchProducts"
                asp-route-searchString="@searchString" asp-route-sortorder="@sort"
                asp-route-pageCurrent="@(pageCurrent + 1)">Sau</a></li>
        </ul>
    </nav>
}
