@model IEnumerable<RAShop.Shared.DTO.ProductDTO>
    <div class="d-flex flex-wrap">
    @foreach (var item in ViewBag.Products)
    {
        var pathImage = "../frontend/assets/img/product/" + @item.MainImg + ".png";
        <div class="card m-1" style="width: 24%;">
            <img src="@pathImage" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.ProductName</h5>
                <p class="card-text">@item.MainImg</p>
                <a href="#" class="btn btn-primary">Buy</a>
            </div>
        </div>
    }
</div>